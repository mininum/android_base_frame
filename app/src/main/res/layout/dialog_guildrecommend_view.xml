<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/black">

    <org.rdengine.widget.RoundFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:corner_radius_all="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_ingeral_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="49dp"
                android:textColor="#444444"
                android:textSize="18dp"
                android:text="公会积分达到30W"
                android:paddingBottom="7dp"/>

            <TextView
                android:id="@+id/tv_currency_ingeral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="当前积分：183738"
                android:gravity="center_horizontal"
                android:paddingTop="7dp"
                android:paddingBottom="31dp"
                android:textSize="13dp"
                android:textColor="#808080"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ececec"/>

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center_horizontal"
                android:text="@string/cancel"
                android:textColor="#ff671a"/>

        </LinearLayout>


    </org.rdengine.widget.RoundFrameLayout>




</LinearLayout>