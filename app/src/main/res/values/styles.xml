<resources>

    <!--
         Base application theme, dependent on API level. This theme is replaced
         by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
     -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->


        <!-- <item name="android:windowIsTranslucent">true</item> -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorPrimaryInverse">#000000</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16dip</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/view_background</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowBackground">@color/titlebar</item>-->
        <item name="android:windowBackground">@drawable/splash_theme_background</item>
    </style>

    <style name="WindowAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="ActionSheetAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>

    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/full_transparent</item>
        <item name="android:windowBackground">@color/full_transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustResize</item>
    </style>

    <style name="ActionSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/full_transparent</item>
        <item name="android:windowBackground">@color/full_transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetAnimation</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustResize</item>
    </style>

    <style name="RightPushhDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/full_transparent</item>
        <item name="android:windowBackground">@color/full_transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/RightPushAnimation</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustResize</item>
    </style>

    <style name="LeftPushhDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/full_transparent</item>
        <item name="android:windowBackground">@color/full_transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/LeftPushAnimation</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustResize</item>
    </style>

    <style name="RightPushAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/right_push_up_in</item>
        <item name="android:windowExitAnimation">@anim/right_push_up_out</item>
    </style>

    <style name="LeftPushAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/left_push_up_in</item>
        <item name="android:windowExitAnimation">@anim/left_push_up_out</item>
    </style>

    <style name="dialog_fullscreen_pushup" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/full_transparent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowAnimationStyle">@style/dialog_push_anim</item>
    </style>

    <style name="dialog_fullscreen_zoom" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/full_transparent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowAnimationStyle">@style/dialog_zoom</item>
    </style>

    <style name="ActionSheetFull" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/full_transparent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetAnimation</item>
    </style>

    <style name="dialog_fullscreen_alpha" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/full_transparent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowAnimationStyle">@style/dialog_alpha_200</item>
    </style>

    <style name="dialog_push_anim">
        <item name="android:windowEnterAnimation">@anim/bottom_to_current</item>
        <item name="android:windowExitAnimation">@anim/current_to_bottom</item>
    </style>

    <style name="dialog_zoom" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/zoom_enter_dialog</item>
        <item name="android:windowExitAnimation">@anim/zoom_exit_dialog</item>
    </style>

    <style name="dialog_alpha_200" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/alpha_enter</item>
        <item name="android:windowExitAnimation">@anim/alpha_exit</item>
    </style>

    <!-- listview -->
    <style name="listview">
        <item name="android:background">@color/full_transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:groupIndicator">@null</item>
        <item name="android:childDivider">@null</item>
        <item name="android:divider">@color/full_transparent</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:smoothScrollbar">true</item>
    </style>

    <style name="TipTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">9dp</item>
        <item name="android:minWidth">16dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_msg_notify_bg</item>
    </style>

</resources>
